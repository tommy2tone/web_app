{% extends "layout.jinja2" %}

{% block subtitle %}Reset{% endblock %}

{% block content %}
<div class='col-xs-4'>
  <form method='POST'>
      <label for='email'>Email:</label>
      <input  class='form-control'
              id='usr'
              placeholder='Enter Email'
              type='email'
              name='email_name'
              required
      />
      </br>
      <button type='submit' class='btn btn-default' name='form.submitted'>Submit</button>
    
    </form>
    {{message}} 
    </br>
    <h3><a href='{{link}}'>{{label}}</a></h3>
</div>
  
  
{% endblock content %}